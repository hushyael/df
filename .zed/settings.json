{
	"theme": "pph dark",
	"ui_font_family": "MonoLisa",
	"buffer_font_family": "MonoLisa",
	"ui_font_size": 14,
	"buffer_font_size": 14,
	"tab_size": 2,
	"vim_mode": true,
	"hard_tabs": true,
	"cursor_blink": false,
	"show_whitespaces": "none",
	"formatter": "language_server",
	"languages": {
		"Go": {
			"tab_size": 4,
			"formatter": {
				"external": {
					"command": "goimports"
				}
			}
		},
		"YAML": {
			"hard_tabs": false
		}
	},
	"lsp": {
		"gopls": {
			"ui.diagnostic.staticcheck": true,
			"ui.completion.usePlaceholders": true,
			"initialization_options": {
				"usePlaceholders": true,
				"buildFlags": [
					"-tags=acceptance,functional"
				]
			}
		}
	},
	"project_panel": {
		"folder_icons": false,
		"auto_fold_dirs": false,
		"show_diagnostics": "all",
		"scrollbar": {
			"show": "never"
		},
		"indent_guides": {
			"show": "never"
		}
	},
	"terminal": {
		"font_size": 12,
		"toolbar": {
			"breadcrumbs": false
		}
	},
	"tab_bar": {
		"show": false,
		"show_nav_history_buttons": false
	},
	"buffer_font_features": {
		"liga": false
	},
	"toolbar": {
		"quick_actions": false
	},
	"indent_guides": {
		"enabled": false
	},
	"features": {
		"inline_completion_provider": "zed"
	},
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	}
}
